@model List<Category> // ดึง OBJ ที่เชื่อม DB มาใช้



<div class="container">
    <div class="row py-4">
        <div class="col-6">
            <h1>Category List</h1>
        </div>
        <div class="col-6 text-end ">
            <a asp-controller="Category" asp-action="Create" class="btn btn-outline-primary">
                <i class="bi bi-plus-circle"></i> Create new category
            </a>
        </div>
    </div>

        <table class="table table-bordered table-striped">
           <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Display Order</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model.OrderBy(u => u.DisplayOrder)) // ลูปข้อมูลจาก DATABASE ออกมาแสดง
                {
                    <tr>
                        <td>@obj.Name</td>  
                        <td>@obj.DisplayOrder</td>
                        <td><div class="w-75 btn-group" role="group">
                                <a asp-action="Edit" asp-controller="Category" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                                </a> 
                                <a asp-action="Delete" asp-controller="Category" asp-route-id="@obj.Id" class="btn btn-danger ">
                                <i class="bi bi-trash"></i>Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
       
            </tbody>
        </table>
</div>